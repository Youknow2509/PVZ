<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="anchorPane" prefHeight="576.0" prefWidth="1024.0" stylesheets="@../CSS/Home.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.Controller.Home.HomeController">
   <children>
      <ImageView fx:id="bg" fitHeight="576.0" fitWidth="1024.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Assets/images/items/WallpaperGame.png" />
         </image>
      </ImageView>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="bg_button">
         <children>
            <VBox alignment="CENTER" prefHeight="270.0" prefWidth="210.0">
               <children>
                  <AnchorPane fx:id="load" onMouseClicked="#clickLoad" prefHeight="200.0" prefWidth="200.0" styleClass="btn">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="btn">
                           <image>
                              <Image url="@../../../Assets/images/items/Button1.png" />
                           </image>
                        </ImageView>
                        <Text layoutX="80.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Load">
                           <styleClass>
                              <String fx:value="text" />
                              <String fx:value="btn" />
                           </styleClass>
                        </Text>
                     </children>
                  </AnchorPane>
                  <AnchorPane onMouseClicked="#clickNewGame" prefHeight="200.0" prefWidth="200.0" styleClass="btn">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="btn">
                           <image>
                              <Image url="@../../../Assets/images/items/Button1.png" />
                           </image>
                        </ImageView>
                        <Text fx:id="newGame" layoutX="62.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="New Game">
                           <styleClass>
                              <String fx:value="text" />
                              <String fx:value="btn" />
                           </styleClass>
                        </Text>
                     </children>
                  </AnchorPane>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0" styleClass="btn">
                     <children>
                        <ImageView fx:id="exit" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#clickExit" pickOnBounds="true" preserveRatio="true" styleClass="btn">
                           <image>
                              <Image url="@../../../Assets/images/items/Button1.png" />
                           </image>
                        </ImageView>
                        <Text layoutX="85.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Exit">
                           <styleClass>
                              <String fx:value="text" />
                              <String fx:value="btn" />
                           </styleClass>
                        </Text>
                     </children>
                  </AnchorPane>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
